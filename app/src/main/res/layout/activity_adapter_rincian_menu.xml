<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Adapter.AdapterRincianMenu">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/txt_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtnamamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/image1"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Nama Menu"
                android:layout_toRightOf="@id/image1"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/txtharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtnamamenu"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Harga Menu" />
            <TextView
                android:id="@+id/txtjml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignStart="@+id/txtnamamenu"
                android:layout_below="@+id/txtharga"
                android:textStyle="bold"
                android:textColor="@color/colorHijau"
                android:text="Qty  :" />
            <TextView
                android:id="@+id/txt_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/txtjml"
                android:layout_below="@+id/txtnamamenu"
                android:text="2" />

            <TextView
                android:id="@+id/txtmenuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtidtransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtgambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>